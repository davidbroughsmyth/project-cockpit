<% content_for(:title) { "Project Dashboard" } %>
<div class="gridster">
  <ul style="margin:0 auto; width: 900px;">
    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
    	<div id="build_state" data-id="build_state" data-view="Text" data-title="Build state" data-text="Checking..." style="background:#f33"></div>
		<i class="icon-heart icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/logo.png" style="background:#fff"></div>
    </li>
    
    <li data-row="1" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="synergy" data-view="Meter" data-title="Success rate" data-min="0" data-max="100" style="background:#8c8"></div>
    </li>    
    
    <li data-row="2" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="pullrequest" data-view="Text" data-title="Latest open pull request" data-text="" style="background:#88c"></div>
    </li>

    <li data-row="2" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="welcome" data-view="Text" data-title="Hello" data-text="This is the Project [m] dashboard" data-moreinfo=""></div>
    </li>
  </ul>
  <center><div style="font-size: 12px">Try this: curl -d '{ "auth_token": "YOUR_AUTH_TOKEN", "text": "Hey, Look what I can do!" }' \http://<%=request.host%>:<%=request.port%>/widgets/welcome</div></center>
</div>